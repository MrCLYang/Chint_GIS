<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
  >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:background="@drawable/bac_line_strokebac"
            android:alpha="1.0"
            android:elevation="51dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="220dp">
            <TextView
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/bt_color"
                android:text="用户详情"
                />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:textColor="@color/bar_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="用户编号: "
                    />
                <TextView
                    android:id="@+id/cons_no"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="5555555555"
                    />
                <TextView
                    android:textColor="@color/bar_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="姓名: "
                    />
                <TextView
                    android:id="@+id/cons_name"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="李凌云"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:textColor="@color/bar_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="联系电话:"
                    />
                <ImageView

                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_contact_phone_24"
                    />
                <TextView
                    android:id="@+id/cons_phoneNumber"
                    android:layout_marginLeft="10dp"
                    android:layout_width="140dp"
                    android:textSize="16dp"
                    android:layout_height="match_parent"
                    android:autoLink="phone"
                    android:text="13100721569"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <TextView
                    android:textColor="@color/bar_grey"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="地址:"
                    />

                <TextView
                    android:textColor="@color/bar_grey_90"
                    android:textSize="18dp"
                    android:id="@+id/cons_address"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="match_parent"
                    android:text="XX区新梦大道即新农村第四排东户数7号501"
                    />
                <ImageView

                    android:id="@+id/iv_address_go"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_edit_location_24"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                   android:textColor="@color/bar_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="表号: "
                    />
                <TextView
                    android:id="@+id/fac_number"
                    android:layout_marginLeft="10dp"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:text="00001811096316"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="表具类型: "
                    android:textColor="@color/bar_grey"
                    />
                <TextView
                    android:id="@+id/fac_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="气量表"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2">
                <TextView

                    android:textColor="@color/bar_grey"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="表读数:"
                    />

                <TextView
                    android:textColor="@color/bar_grey"
                    android:textSize="20dp"
                    android:id="@+id/cons_read"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="500.5"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                    android:layout_margin="5dp"
                android:background="@drawable/bac_line_point"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:background="@color/blue"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="开始安检"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/this_ymd"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    android:text="2020-08-01 14:0404"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:background="@drawable/bac_line_point"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:gravity="center"
                    android:background="@color/color_black"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text="结束安检"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    android:text="提交时生成"
                    />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout

        android:layout_margin="5dp"
        android:background="@drawable/bac_line_strokebac"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="320dp">
        <TextView
            android:textSize="18dp"
            android:layout_margin="2dp"
            android:background="@color/common_red"
            android:textColor="@color/white"
            android:text="安检信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_margin="3dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:gravity="center"
                android:text="入户情况："
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <RadioGroup
                android:id="@+id/rg_anjian"
                android:background="@drawable/bac_line_stroke"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="正常"
                    android:checked="true"
                    />
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="到访不遇"
                    />
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="拒绝入户"
                    />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center"
                android:text="原因：          "
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/anjian_beizhu"
                android:background="@drawable/bac_line_stroke"
                android:focusable="false"
                android:hint="入户问题备注"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:padding="5dp"

            android:textColor="@color/common_red"
            android:text="    (安检时如论成功失败都需要附上现场图，左滑录入安检问题)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/bar_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="异常问题记录："
            />
        <LinearLayout
            android:layout_margin="5dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="@drawable/bac_line_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_current"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/add_img"
                />
            <TextView
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="记录设备录入的问题"
                />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
                android:layout_margin="3dp"
              android:orientation="vertical"
            android:background="@drawable/bac_line_strokebac"
            android:layout_width="match_parent"
            android:layout_height="370dp">
            <TextView
                android:background="@color/common_red"
                android:textColor="@color/white"
                android:text="用户确认 "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="整改单据： "
            android:textColor="@color/bar_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bac_line_stroke"
            />
    </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:background="@drawable/bac_line_point"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/add_img"
                    />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/add_img"
                    />
            </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="@color/bar_grey"
            android:gravity="center"
            android:text="用户评价    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RatingBar
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:numStars="6"
            />
    </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:textColor="@color/bar_grey"
                    android:gravity="center"
                    android:text="用户签字   "
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
               <RadioGroup
                   android:orientation="horizontal"
                   android:layout_width="0dp"
                   android:layout_weight="4"
                   android:layout_height="match_parent">
                   <RadioButton
                   android:text="自签"
                       android:layout_width="wrap_content"
                   android:layout_height="match_parent"/>
                   <RadioButton
                       android:text="代签"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"/>
                   <RadioButton
                       android:text="拒签"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"/>
               </RadioGroup>
                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="签字"
                    />
            </LinearLayout>
        </LinearLayout>
            <Button
              android:id="@+id/button_commit"
                android:layout_margin="10dp"
                android:padding="6dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="提交与保存"

                android:layout_width="match_parent"
                android:layout_height="70dp"/>
    </LinearLayout>

</ScrollView>
